<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="travelagency_customer_action" model="ir.actions.act_window">
        <field name="name">Details</field>
        <field name="res_model">travelagency.customer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ___________________________TREE VIEW___________________________ -->

    <record id="travelagency_customer_view_tree" model="ir.ui.view">
        <field name="name">travelagency.customer.view.tree</field>
        <field name="model">travelagency.customer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="budget"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="packages_type_id"/>
                <field name="accommodation_type_id"/>
                <field name="status"/>
                <field name="accommodation_budget" optional="hide"/>
                <field name="package_budget" optional="hide"/>
                <field name="gender" optional="hide"/>
                <field name="street" optional="hide"/>
                <field name="street2" optional="hide"/>
                <field name="city" optional="hide"/>
                <field name="state" optional="hide"/>
                <field name="country" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- ___________________________FORM VIEW___________________________ -->

    <record id="travelagency_customer_view_form" model="ir.ui.view">
        <field name="name">travelagency.customer.view.form</field>
        <field name="model">travelagency.customer</field>
        <field name="arch" type="xml">
            <form string="Customer">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" invisible="status in ('confirmed','cancelled')"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="status in ('confirmed','cancelled')"/>
                    <field name="status" widget='statusbar' statusbar_visible='new,package_added,confirmed,cancelled'/>
                </header>
                <sheet>
                    <h1>
                        <field widget="text" name="name" placeholder="e.g. Mitul" />
                    </h1>
                    <div>
                        <group>
                            <field name="status"/>
                        </group>
                    </div>
                    <group>
                        <group>
                            <span class="o_form_label o_td_label">
                                <b>Address</b>
                            </span>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state" class="o_address_state" placeholder="State"/>
                                <div class="d-flex justify-content-between">
                                    <field name="country" placeholder="Country" class="o_address_country"/>
                                </div>
                            </div>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="packages_type_id"/>
                            <field name="accommodation_type_id"/>
                            <field name="budget"/>
                        </group>
                        <group>
                            <field name="accommodation_budget"/>
                            <field name="package_budget"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Packages">
                            <field name="package_ids"/>
                        </page>
                        <page string="Accommodations">
                            <field name="accommodation_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ___________________________SEARCH VIEW___________________________ -->

    <record id="travelagency_customer_view_search" model="ir.ui.view">
        <field name="name">travelagency.customer.view.search</field>
        <field name="model">travelagency.customer</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="budget"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="packages_type_id"/>
                <field name="accommodation_type_id"/>
                <field name="status"/>
                <field name="accommodation_budget" />
                <field name="package_budget" />
                <field name="gender"/>
                <field name="street" />
                <field name="street2" />
                <field name="city" />
                <field name="state" />
                <field name="country"/>
                <group expand="1" string="Group By">
                    <filter string="Accommodation type" name='accommodation_type' context="{'group_by':'accommodation_type_id'}"/>
                    <filter string="Status" name='status' context="{'group_by':'status'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
