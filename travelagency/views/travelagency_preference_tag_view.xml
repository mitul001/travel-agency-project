<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="travelagency_preference_tag_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">travelagency.preference.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ___________________________TREE VIEW___________________________ -->

    <record id="travelagency_preference_tag_view_tree" model="ir.ui.view">
        <field name="name">travelagency_preference_tag_view_tree</field>
        <field name="model">travelagency.preference.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- ___________________________FORM VIEW___________________________ -->

    <record id="travelagency_preference_tag_view_form" model="ir.ui.view"> 
        <field name="name">travelagency_preference_tag_view_form</field>
        <field name="model">travelagency.preference.tag</field>
        <field name="arch" type="xml">
            <form>
            <sheet>
                <group>
                    <field name="name"/>
                </group>
            </sheet>
            </form>
        </field>
    </record>
</odoo>
