<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="travelagency_accommodation_action" model="ir.actions.act_window">
        <field name="name">Accomodation</field>
        <field name="res_model">travelagency.accommodation</field>
        <field name="view_mode">tree,form</field>
    </record>
        <!-- ___________________________TREE VIEW___________________________ -->

        <record id="travelagency_accommodation_view_tree" model="ir.ui.view">
            <field name="name">travelagency.accommodation.view.tree</field>
            <field name="model">travelagency.accommodation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="price"/>
                </tree>
            </field>
        </record>

        <!-- ___________________________FORM VIEW___________________________ -->

        <record id="travelagency_accommodation_view_form" model="ir.ui.view">
            <field name="name">travelagency.accommodation.view.form</field>
            <field name="model">travelagency.accommodation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                            <h1><field name="name" widget="text" placeholder="eg Raj Hotel...."/></h1>
                            <group>
                                <field name="price"/>
                                <field name="accommodation_type_id"/>
                            </group>
                            <notebook>
                                <page string="Description">
                                    <label for="description"/>
                                    <field name="description"/>
                                </page>
                            </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ___________________________SEARCH VIEW___________________________ -->

        <record id="travelagency_accommodation_search" model="ir.ui.view">
            <field name="name">travelagency.accommodation.search</field>
            <field name="model">travelagency.accommodation</field>
            <field name="arch" type="xml">
                <search>
                    <field name="accommodation_type_id"/>
                    <field name="price"/>
                </search>
            </field>
        </record>
</odoo>
